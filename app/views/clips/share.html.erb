
<div class='container-fluid'>
  <div class='row-fluid'>
    <div class='back_btn pull-left'>
      <a href='/clips/<%= @clip.id %>'> BACK</a>
    </div>
    <div class='share_head pull-left' >
      Share Video
    </div>
  </div>

  <div class='row-fluid'>
    <div class='share_btn box' data-type='box'></div>
    <div class='share_btn tube' data-type='tube'></div>
  </div>

</div>


<script type="text/javascript">
$(document).ready(function(){
  $('body').on('click', '.share_btn', function(){
    btn = $(event.target)
    type = btn.attr('data-type')

    btn.addClass('loading')

    setTimeout(function(){
      btn.addClass('done');
      setTimeout(function(){
        window.location='/clips/<%= @clip.id %>';
      }, 2000);
    },3000);
  })
})
</script>