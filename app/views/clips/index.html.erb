<h1>Listing clips</h1>

<table>
  <tr>
    <th>Speed</th>
    <th>Date string</th>
    <th>Time</th>
    <th>Location</th>
    <th>Video url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @clips.each do |clip| %>
  <tr>
    <td><%= clip.speed %></td>
    <td><%= clip.date_string %></td>
    <td><%= clip.time %></td>
    <td><%= clip.location %></td>
    <td><%= clip.video_url %></td>
    <td><%= link_to 'Show', clip %></td>
    <td><%= link_to 'Edit', edit_clip_path(clip) %></td>
    <td><%= link_to 'Destroy', clip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

